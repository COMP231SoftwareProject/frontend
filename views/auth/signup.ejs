<%- include('../partials/header')%>

<div class="container">
    <div class="row">

        <div class="offset-md-3 col-md-3">
            <h1><%= title %></h1>

            <% for(var i in messages) { %>
                <div class="flash"><%= messages[i] %></div>
            <% } %>
            <form action="/users/signup" method="post" validate>
                <div class="form-group">
                    <label>First Name:</label>
                    <input type="text" name="firstName" value="<%= user.firstName %>" class="w3-input w3-border"/>
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input type="text" name="lastName" value="<%= user.lastName %>" class="w3-input w3-border"/>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" name="email" value="<%= user.email %>" class="w3-input w3-border"/>
                </div>
                <div class="form-group">
                    <label>Username:</label>
                    <input type="text" name="username" value="<%= user.username %>" class="w3-input w3-border"/>
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" name="password" value="<%= user.password %>" class="w3-input w3-border"/>
                </div>
                <div class="form-group">
                    <label>Confirm Password:</label>
                    <input type="password" name="password_confirm" class="w3-input w3-border"/>
                </div>
                <br>
                <div class="form-group">
                    <label>User Role</label>
                    <select name="userrole" id="userrole" class="w3-input w3-border">
                        <option value="" selected disabled hidden>--</option>
                        <option value="Individual">Individual</option>
                        <option value="Health Care Worker">Health Care Worker</option>
                        <option value="Officer">Officer</option>
                        <option value="Analyst">Analyst</option>
                        <option value="Commercial Company">Commercial Company</option>
                      </select>
                </div>
                <br>
                <div>
                    <input class="btn btn-primary" type="submit" value="Sign up" />
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer')%>